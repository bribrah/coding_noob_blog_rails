<% provide(:title, "Blog Index") %>
<h1>Blog posts</h1>
<table class="index">
    <tr>
        <th class="post_title">Title</th>
        <th></th>
    </tr>
    <%  @posts.order(:id).each do |post| %>
    <tr>
        <td class="post_title"><%= link_to  post.title, post_path(post) %></td>
        <td><%= link_to  "Edit Post", edit_post_path(post) %></td>
        <td><%= link_to  "Delete Post", post_path(post), method: :delete, data:{ confirm: "Are you Sure?"} %></td>
    </tr>
    <% end %>

</table>
<%= link_to  "Create New Post ", new_post_path %>


